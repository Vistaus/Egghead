<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="egghead">
  <schema id="io.github.josephmawa.Egghead" path="/io/github/josephmawa/Egghead/">
    <key name="window-width" type="i">
      <default>800</default>
    </key>
    <key name="window-height" type="i">
      <default>600</default>
    </key>
    <key name="window-maximized" type="b">
      <default>false</default>
    </key>
    <key name="preferred-theme" type="s">
      <choices>
        <choice value="system" />
        <choice value="dark" />
        <choice value="light" />
      </choices>
      <default>"system"</default>
    </key>
    <key name="difficulty" type="s">
      <choices>
        <choice value="mixed" />
        <choice value="easy" />
        <choice value="medium" />
        <choice value="hard" />
      </choices>
      <default>"mixed"</default>
    </key>
    <key name="category-id" type="i">
      <!-- For some reason integer types must have range specified or 
      else the binding won't work -->
      <range min="0" max="5000" />
      <default>9</default>
    </key>
  </schema>
</schemalist>